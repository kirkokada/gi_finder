<div class="row">
	<div class="col-md-8">
		<h2><%= params[:action].titleize %> Size</h2>
		<%= form_for [@brand, @size] do |f| %>
		  <%= render 'shared/error_messages', object: f.object %>
		  <div class="form-group">
		  	<%= f.label :name, "Name" %>
		  	<%= f.text_field :name, class: "form-control", placeholder: "e.g. A1" %>
		  </div>

		  <div class="row">
			  <div class="form-group col-md-3">
			  	<%= f.label :min_height, "Minimum Height (inches)" %>
			  	<%= f.number_field :min_height, class: "form-control" %>
			  </div>

			  <div class="form-group col-md-3 col-md-offset-3">
			  	<%= f.label :max_height, "Maximum Height (inches)" %>
			  	<%= f.number_field :max_height, class: "form-control" %> 
			  </div>
		  </div>

		  <div class="row">
			  <div class="form-group col-md-3">
			  	<%= f.label :min_weight, "Minimum Weight (lbs)" %>
			  	<%= f.number_field :min_weight, class: "form-control" %>
			  </div>

			  <div class="form-group col-md-3 col-md-offset-3">
			  	<%= f.label :max_weight, "Maximum Weight (lbs)" %>
			  	<%= f.number_field :max_weight, class: "form-control" %>
			  </div>
		  </div>

		  <%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>